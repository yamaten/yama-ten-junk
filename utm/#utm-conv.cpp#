#include <iostream>
#include <iomanip> 
using namespace std;

#include "LatLong-UTMconversion.h"
int utm_main(int argc, const char* argv[]);


void help_msg()
{
    cout <<
"UTM-convert \
 usage: \
   utm [options] [[-l] Lat Long | -u zone xcode ycode] \
   \
  Lat : [N|+|S|-][0 | ddd.ffff | dd,mm.fff | dd,mm,ss.ff | ddd-mm-ss.ff ] \
  Long: [E|+|W|-][0 | ddd.ffff | dd,mm.fff | dd,mm,ss.ff | ddd-mm-ss.ff ] \
"; 
}



double conv_deg(const char* str)
{

  std:regex r1(R'([NEWS+-]{\d.|(\d.\.\d.)})');
  
  
  


  
  double res = 0;
  char sign='+';
  bool fd[3] = { 0, 0, 0 };
  double dd[3] = {0, 0, 0 };
  int pos = 0;
  
  for (const char* s=str; s!='\0'; s++) {
    switch (*s) {
    default:
      if (isblank(*s))
	continue;
      break;

    case '+':
    case 'N': 
    case 'E':
      sign = '+';
      break;
      
    case '-':
    case 'S':
    case 'W':
      sign = '-';
      break;
      
  return res;
}



int main(int argc, char* argv[]);
{
  if (argc < 2) {
    help_msg();      
  } else if (argc == 3) {
    double lat = conv_deg(argv[1]);
    double lon = conv_deg(argv[2]);
  }
  
}


